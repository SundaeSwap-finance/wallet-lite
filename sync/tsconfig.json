{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "outDir": "./dist/types",
    "baseUrl": "."
  },
  "include": ["./src/exports/index.ts", "./src/exports/react-components.ts"],
  "exclude": ["../node_modules"]
}
