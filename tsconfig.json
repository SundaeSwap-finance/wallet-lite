{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["es6", "dom"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "typeRoots": ["./packages/sync/@types", "./node_modules/@types"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "setup-tests.ts"],
  "exclude": ["node_modules", "dist"]
}
